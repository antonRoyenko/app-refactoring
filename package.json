{
    "name": "my-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "classnames": "^2.2.6",
        "prettier": "^1.18.2",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-redux": "^5.1.1",
        "react-scripts": "2.1.8",
        "redux": "^4.0.1",
        "redux-form": "^8.2.6",
        "redux-saga": "^0.16.0",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "seamless-immutable": "^7.1.4",
        "styled-components": "^4.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint:all:check": "yarn run lint:styles:check && yarn run lint:scripts:check",
        "lint:all:fix": "yarn run lint:styles:fix && yarn run lint:scripts:fix",
        "lint:scripts:check": "eslint --format friendly \"src/**/*.{js,jsx}\"",
        "lint:scripts:fix": "yarn run lint:scripts:check --fix",
        "lint:styles:check": "stylelint --custom-formatter=node_modules/stylelint-formatter-pretty \"src/**/*.{scss,css}\"",
        "lint:styles:fix": "yarn run lint:styles:check --fix",
        "storybook:start": "start-storybook -p 6006",
        "storybook:build": "build-storybook"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "babel-plugin-macros": "^2.5.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.3.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-formatter-friendly": "^7.0.0",
        "eslint-import-resolver-webpack": "^0.11.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.15.1",
        "eslint-plugin-react-hooks": "^2.1.1",
        "eslint-plugin-redux-saga": "^1.1.1",
        "husky": "^3.0.8",
        "lint-staged": "^9.4.1",
        "stylelint": "^11.0.0",
        "stylelint-config-css-modules": "^1.5.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended-scss": "^4.0.0",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-formatter-pretty": "^1.1.3",
        "stylelint-order": "^3.1.1",
        "stylelint-scss": "^3.11.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.(ts|tsx)": [
            "yarn run lint:scripts:fix",
            "git add"
        ],
        "src/**/*.(css|scss)": [
            "yarn run lint:styles:fix",
            "git add"
        ]
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-recommended-scss",
            "stylelint-config-rational-order",
            "stylelint-config-css-modules"
        ],
        "plugins": [
            "stylelint-order",
            "stylelint-config-rational-order/plugin",
            "stylelint-scss"
        ],
        "rules": {
            "declaration-empty-line-before": null,
            "scss/declaration-nested-properties-no-divided-groups": true,
            "at-rule-no-unknown": null,
            "block-no-empty": null,
            "plugin/rational-order": [
                true,
                {
                    "empty-line-between-groups": true
                }
            ]
        }
    }
}
